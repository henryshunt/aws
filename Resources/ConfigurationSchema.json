{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",

    "properties": {
        "dataLedPin": {
            "type": "integer",
            "minimum": 0
        },
        "errorLedPin": {
            "type": "integer",
            "minimum": 0
        },
        "clockTickPin": {
            "type": "integer",
            "minimum": 0
        },

        "position": {
            "type": "object",
            "properties": {
                "latitude": { "type": "number" },
                "longitude": { "type": "number" },
                "elevation": { "type": "number" }
            },

            "required": [
                "latitude",
                "longitude",
                "elevation"
            ]
        },

        "sensors": {
            "type": "object",

            "properties": {
                "airTemp": { "type": "object" },
                "relHum": { "type": "object" },
                "bme680": { "type": "object" },

                "satellite": {
                    "type": "object",

                    "properties": {
                        "port": {
                            "type": "integer",
                            "minimum": 0
                        },

                        "windSpeed": {
                            "type": "object",
                            "properties": {
                                "pin": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            },
                            "required": [ "pin" ]
                        },

                        "windDir": {
                            "type": "object",
                            "properties": {
                                "pin": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            },
                            "required": [ "pin" ]
                        },

                        "sunDur": {
                            "type": "object",
                            "properties": {
                                "pin": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            },
                            "required": [ "pin" ]
                        }
                    },

                    "required": [ "port" ]
                },

                "rainfall": {
                    "type": "object",
                    "properties": {
                        "pin": {
                            "type": "number",
                            "minimum": 0
                        }
                    },
                    "required": [ "pin" ]
                }
            }
        },

        "uploader": {
            "type": "object",
            "properties": {
                "upload": {
                    "type": "boolean"
                }
            },
            "required": [ "upload" ]
        }
    },

    "required": [
        "dataLedPin",
        "errorLedPin",
        "clockTickPin",
        "position",
        "sensors",
        "uploader"
    ]
}