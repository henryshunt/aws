{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",

    "properties": {
        "dataLedPin": {
            "type": "integer",
            "minimum": 0
        },
        "errorLedPin": {
            "type": "integer",
            "minimum": 0
        },
        "clockTickPin": {
            "type": "integer",
            "minimum": 0
        },

        "position": {
            "type": "object",
            "properties": {
                "latitude": { "type": "number" },
                "longitude": { "type": "number" },
                "elevation": { "type": "number" }
            },
            "required": [ "latitude", "longitude", "elevation" ]
        },

        "sensors": {
            "type": "object",

            "properties": {
                "mcp9808": {
                    "type": "object",
                    "properties": {
                        "enabled": { "type": "boolean" }
                    },
                    "required": [ "enabled" ]
                },

                "bme680": {
                    "type": "object",
                    "properties": {
                        "enabled": { "type": "boolean" }
                    },
                    "required": [ "enabled" ]
                },

                "satellite": {
                    "type": "object",

                    "properties": {
                        "port": {
                            "type": "integer",
                            "minimum": 0
                        },

                        "i8pa": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "enabled": { "enum": [ false ] }
                                    },
                                    "required": [ "enabled" ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "enabled": { "enum": [ true ] },
                                        "pin": {
                                            "type": "number",
                                            "minimum": 0
                                        }
                                    },
                                    "required": [ "enabled", "pin" ]
                                }
                            ]
                        },

                        "iev2": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "enabled": { "enum": [ false ] }
                                    },
                                    "required": [ "enabled" ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "enabled": { "enum": [ true ] },
                                        "pin": {
                                            "type": "number",
                                            "minimum": 0
                                        }
                                    },
                                    "required": [ "enabled", "pin" ]
                                }
                            ]
                        },

                        "isds": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "enabled": { "enum": [ false ] }
                                    },
                                    "required": [ "enabled" ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "enabled": { "enum": [ true ] },
                                        "pin": {
                                            "type": "number",
                                            "minimum": 0
                                        }
                                    },
                                    "required": [ "enabled", "pin" ]
                                }
                            ]
                        }
                    },

                    "required": [ "port", "i8pa", "iev2", "isds" ]
                },

                "rr111": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "enabled": { "enum": [ false ] }
                            },
                            "required": [ "enabled" ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "enabled": { "enum": [ true ] },
                                "pin": {
                                    "type": "number",
                                    "minimum": 0
                                }
                            },
                            "required": [ "enabled", "pin" ]
                        }
                    ]
                }
            },

            "required": [ "mcp9808", "bme680", "satellite", "rr111" ]
        },

        "transmitter": {
            "type": "object",
            "properties": {
                "transmit": { "type": "boolean" }
            },
            "required": [ "transmit" ]
        }
    },

    "required": [
        "dataLedPin",
        "errorLedPin",
        "clockTickPin",
        "position",
        "sensors"
    ]
}